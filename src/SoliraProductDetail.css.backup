:root {
  --color-bg: #F7EFE5;
  --color-bg-alt: #f7f7f7;
  --color-border: #e5e5e5;
  --color-border-light: #f1f1f1;
  --color-shadow: 0 3px 18px 0 rgba(0,0,0,0.08);
  --color-selected: #A67899;
  --color-accent-pink: #A67899;
  --color-accent-blue: #A9DDD6;
  --color-accent-green: #1E3932;
  --color-accent-peach: #F3D6A4;
  --radius: 16px;
  --shadow: 0 2px 12px 0 rgba(166,120,153,0.10);
  --shadow-soft: 0 2px 8px 0 rgba(166,120,153,0.06);
  --font-wolmer: 'Wolmer', serif;
  --font-main: 'Inter', sans-serif;
  --font-heading: 'Inter', sans-serif;
  --transition: 220ms cubic-bezier(0.4,0,0.2,1);
}


