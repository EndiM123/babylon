@media (min-width: 1200px) {
  html, body, #root {
    height: 100%;
    overflow-x: hidden;
    margin: 0;
    padding: 0;
  }
  
  body {
    overflow-y: auto;
    background-color: #F7EFE5;
  }
  
  main {
    display: flex;
    min-height: 100vh;
    padding: 2.0rem 4rem 10.0rem; /* Slightly increased top and bottom padding */
    box-sizing: border-box;
    margin-top: 20px; /* Minimal negative margin */
  }
  
  /* Desktop gallery layout */
  @media (min-width: 1200px) {
    .product-gallery {
      display: flex;
      align-items: flex-start;
      position: sticky;
      top: 0;
      left: 0;
      height: 100vh;
      padding: 2rem 0;
    }
  }
  
  .product-gallery {
    display: flex;
    align-items: flex-start;
    position: sticky;
    top: 0;
    left: 0;
    height: 100vh;
    padding: 2rem 0;
  }

  .thumbnail-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-right: 1.5rem;
    height: 90vh;
    overflow-y: auto;
    padding-right: 0.5rem;
  }

  .thumbnail {
    width: 60px;
    height: 80px;
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .thumbnail:hover {
    border-color: #000;
    transform: scale(1.05);
  }

  .thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Main product image */
  solira-desktop-image {
    position: sticky;
    top: 0;
    left: 0;
    width: auto;
    height: 100vh;
    padding: 2rem 0;
    margin: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  
  .desktop-product-image {
    width: auto;
    height: 90vh;
    max-height: 90vh;
    object-fit: contain;
    object-position: left center;
  }
  
  /* Product info */
  solira-info {
    width: 40%;
    padding: 2rem 0 2rem 4rem;
    margin: 0;
    display: flex;
    flex-direction: column;
    position: relative;
  }
  
  /* Mobile styles */
  @media (max-width: 1199px) {
    /* Main mobile image */
    solira-mobile-image {
      width: 100%;
      padding: 0 1rem;
      margin: -30px 0 0.5rem; /* Moved up by 30px and reduced bottom margin */
      box-sizing: border-box;
    }

    solira-mobile-image img {
      width: 100%;
      height: auto;
      max-height: 70vh;
      object-fit: contain;
      display: block;
    }

    /* Mobile swiper styles */
    .mobile-swiper {
      width: 100%;
      height: 100%;
    }
    
    .mobile-swiper .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .mobile-swiper .swiper-pagination {
      bottom: 10px; /* Slightly lower pagination dots */
    }
    
    .mobile-swiper .swiper-pagination-bullet {
      width: 8px;
      height: 8px;
      margin: 0 4px;
      background: rgba(0, 0, 0, 0.3);
      opacity: 1;
    }
    
    .mobile-swiper .swiper-pagination-bullet-active {
      background: #000;
    }
    
    /* Hide thumbnails on mobile */
    .thumbnail-container,
    .thumbnail,
    .thumbnail-image,
    .desktop-product-image {
      display: none !important;
    }

    /* Individual thumbnails */
    .thumbnail {
      width: 45px;
      height: 56px;
      border: 1px solid #e8e8e8;
      border-radius: 3px;
      overflow: hidden;
      flex: 0 0 auto;
      transition: all 0.15s ease;
      background: white;
    }

    .thumbnail:hover {
      border-color: #000;
      transform: translateY(-2px);
    }

    .thumbnail-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    /* Hide desktop image on mobile */
    solira-desktop-image {
      display: none;
    }
    
    /* Hide desktop gallery on mobile */
    .product-gallery {
      display: none;
    }
  }
}

